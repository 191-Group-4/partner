<div class="panel panel-default">
  <div class="panel-heading">
    <h2 class="panel-title"><span class="glyphicons glyphicons-notes-2"></span>&emsp;&emsp;To-Dos</h2>
  </div>
  <div class="panel-body">

<%@notifications = false%>
<% case current_user.role %>
<% when 0 %>
	<% if current_user.group_relations.empty? %>
	    <span style="font-weight:normal;">Looks like you're all caught up!</span>
	<% else %>
				<%= render 'visitors/todos_student'%>
	<% end %>
<% when 1..3 %>
		<%= render 'visitors/todos_professor'%>
	<% if @notifications == false %>
	    <span style="font-weight:normal;">Looks like you're all caught up!</span>
	<% end %>
<% end %>
</div>