<div style='float:left;'>
  <% if group.nil? %>
    </div>
  <% else %>
    <% if !group.name.nil? %>
        <% groupname = group.name %>
    <% else %>
        <% groupname = group.users.pluck(:first_name).to_sentence %>
    <% end %>

 <span style="font-size:25px; font-weight:bold;"><%= link_to groupname, group%></span>
 </span>
 <span style="font-size:20px; font-weight:bold;">  <br>Project:</span>
 <span style="font-size:18px;"><%= group.project.name%></span>
 <span style="font-size:20px; font-weight:bold;">  <br>Course:</span>
 <span style="font-size:18px;"><%= Course.find(group.project.course_id).course_title%><br></span></div>
<div style='float:right;'><%=  link_to "<span class=\"glyphicon glyphicon-calendar\"></span>&nbsp;&nbsp;<b>Start a Doodle</b>".html_safe, "http://doodle.com/create?type=date&locale=en&title=#{group.name}%20Group%20Meeting&name=#{current_user.first_name}%20#{current_user.last_name}&eMailAddress=#{current_user.email}&description=Our%20first%20group%20meeting...", class: "btn btn-info btn-md" %></div>
<div style='float:right;'><%=  link_to "<span class=\"glyphicon glyphicon-remove\"></span>&nbsp;&nbsp;<b>Leave Group</b>".html_safe, leave_group_path(group), class: "btn btn-danger btn-sm" %></div>

  <table class="table" style="width: 95%!important;">
    <td class='collapsable'></td><td><strong>Name</td><td class='collapsable'><strong>Email</td><td><strong>Status</td></strong>
  <% members = group.users.order(:last_name).uniq %>
    <% members.each do |user| %>

       <% if user.group_relations.find_by(group_id: group.id).status == 2 %>
        <tr>
         <td class='collapsable'><%= link_to (image_tag (user.avatar.url), :style => 'max-width: 45px;'), user %></td> 
        <td><%= link_to "#{user.first_name} #{user.last_name}", user %> </td>
        <td class='collapsable'><%= user.email %></td>
        <td>Confirmed</td>
    <% else %>
      <tr style= "background-color:eee; opacity: 0.6;">
      <td class='collapsable'><%= link_to (image_tag (user.avatar.url), :style => 'max-width: 45px;'), user %></td> 
      <td><%= link_to "#{user.first_name} #{user.last_name}", user %> </td>
      <td class='collapsable'><%= user.email %></td>
          <td>Request Pending</td>
    <% end %> 
    </tr>
      <% end %>
    </table>
<%end%>