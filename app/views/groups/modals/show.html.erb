<!-- Profile Page Modal -->
<div class="modal fade" id="show-<%= @group.id%>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel"><span class="glyphicons glyphicons-nameplate-alt"></span> <h2><% (@myproject.group_size == 2) ? 'Partnership' : 'Group' %></h2>
    <h3><%=@group.name%></h3>
    <h4>Project: <%=@myproject.name%></h4>
    <h4>Course: <%= @myproject.courses.collect(&:course_title).uniq.to_sentence%></h4>
  <h2><% @myproject.group_size != 2 ? 'Group Members' : '' %></h2></h4>
      </div>
      <div class="modal-body">
				<%= render 'groups/show', locals: {group: @group} %>
      </div>
      <div class="modal-footer">
           <%= link_to "<span class=\"glyphicons glyphicons-pencil\"></span>&nbsp;&nbsp;Edit Group Name".html_safe,  edit_group_path(@group), class: "btn btn-success btn-xs" if (current_user.groups.include? @group) || (current_user.role != 0) %>
            <%= link_to "<span class=\"glyphicons glyphicons-remove\"></span>&nbsp;&nbsp;<b>Leave Group</b>".html_safe, leave_group_path(@group), data: { confirm: "Are you sure you want to leave the group #{@group.name}?"},  class: "btn btn-danger btn-xs" %>
      </div>
    </div>
  </div>
</div>