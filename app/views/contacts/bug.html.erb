<div class="authform" style="width:90%;">
  <h3>Send Bug Report</h3>

  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>
    <%= f.input :name, :required => true , class: 'form-control' %>
    <%= f.input :email, :required => true, class: 'form-control'  %>
    <%= f.input :message, :as => :text, :required => true , class: 'form-control' %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Submit Report', :class=> "btn btn-primary" %>
    </div>
  <% end %>
</div>