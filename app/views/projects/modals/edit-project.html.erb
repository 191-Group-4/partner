<% delete_confirm = 'Are you sure you want to delete this project? You will permanently lose all information associated with this project.'%>

<!-- Edit Modal would not populate existing record information  -->
<% @project = project %>
<!-- Edit Modal -->
<div class="modal fade" id="edit-<%= project.id%>">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Edit <%= project.name %></h4>
      </div>
      <div class="modal-body">
				<%= form_for :project, url: {controller: 'projects', action: 'update', id: project.id} do |f| %>	
						<%= render partial: 'projects/form', locals: {f: f, project: project, course: @course, edit_path: true} %>
      </div>
      <div class="modal-footer">
				<%=  link_to remove_project_path(project.id), class: "btn btn-danger", style: 'left:auto', data: { confirm: delete_confirm} do %>
					<span class=\"glyphicons glyphicons-remove-2\"></span> Delete Project
				<% end %>
				<%= f.submit("Save Project", id: 'save-project', class: 'btn btn-primary') %>
				<% end %>
      </div>
    </div>
  </div>
</div>