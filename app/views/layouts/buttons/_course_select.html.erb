<!-- selecting course that users will add groups to -->
<!-- if the user is signed in and their enrolled in at least one course on roster -->
<div class="jumbotron" style="float:right; width:100%;padding:10px;display:inline;">
	<% @current_projects = Project.where(course_id: Course.find(current_user.current_course).id, active: true) %>
		<!-- setting current course & project (if there's only one project)-->
	  <%= form_for :user, :url => set_current_course_user_path(current_user.id), :html => { :style => 'display:inline;'} do |f|%>		
			<h4 style="text-align:center;">Select Course</h4>
			<%= f.select :current_course, options_from_collection_for_select(current_user.courses, 
				'id', 'course_title', current_user.current_course), {}, 
				{class: 'form-control', style: 'width:100%; display:inline; height:29px;', onchange: 'this.form.submit();' } %>
		<% end %>
		<!-- setting current_project (if more than one exist)	 -->
		<br>
	 <% if !(current_page?(users_path) && (current_user.role != 0)) %>
	  <%= form_for :user, :url => set_current_project_user_path(current_user.id), :html => { :style => 'display:inline;'} do |f|%>	
			<%= f.select :current_project, options_from_collection_for_select(@current_projects,
				'id', 'name', current_user.current_project), {}, 
				{class: "form-control", style: 'width:100%; display:inline; height:29px;', onchange: 'this.form.submit();'} %>
  		<% end %>
	<% end %>

<% if current_page?(groups_path) && (current_user.role === (1..3)) %>
   <%=link_to "<span class=\"glyphicon glyphicon-save\"></span>&nbsp;&nbsp;Export Table".html_safe, export_csv_users_path(current_user), :class=>"btn btn-warning btn-lg", style: "float:right" %>&nbsp;&nbsp;
<% end %>
	</div>
	