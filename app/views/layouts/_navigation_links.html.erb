		<% when 3 %>
			<li><%= link_to 'Control Panel', '/kayslegion' %></li>
			<li role="presentation" class="<%= 'active' if current_page?(roster_path) %>"><%= link_to "<span class=\"glyphicon glyphicon-list-alt\"></span>&nbsp;&nbsp;Upload Roster".html_safe,  roster_path %></li>
			<li role="presentation" class="<%= 'active' if current_page?(users_path) %>"><%= link_to "<span class=\"glyphicon glyphicon-user\"></span>&nbsp;&nbsp;Students".html_safe, users_path %></li>
			<li role="presentation" class="<%= 'active' if current_page?(groups_path) %>"><%= link_to "<span class=\"glyphicon glyphicon-user\"></span><span class=\"glyphicon glyphicon-user\"></span><span class=\"glyphicon glyphicon-user\"></span>&nbsp;&nbsp;Groups".html_safe, groups_path %></li>
			<li role="presentation" class="<%= 'active' if current_page?(projects_path) %>"><%= link_to "<span class=\"glyphicon glyphicon-pushpin\"></span>&nbsp;&nbsp;Projects".html_safe, projects_path %></li>
			<li role="presentation" class="<%= 'active' if current_page?(courses_path) %>"><%= link_to "<span class=\"glyphicon glyphicon-dashboard\"></span>&nbsp;&nbsp;Courses".html_safe,  courses_path %></li>
		<%end%>
<div class="dropdown pull-right">
  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" style="background-color:transparent; background-image:none; border:1px solid transparent; text-shadow: 0 0px; box-shadow: 0 0px;">
    <span class="glyphicon glyphicon-cog" style="font-size:23px;"></span>
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu pull-right" role="menu">
  	<li role="presentation"><%= link_to "#{current_user.first_name} #{current_user.last_name}", users_profile_path %></li>
    <li role="presentation"><%= link_to 'Edit account', edit_user_registration_path %></li>
    <li role="presentation" class="divider"></li>
    <li role="presentation"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
  </ul>
</div>

<% else %>
