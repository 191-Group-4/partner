<%# Rails flash messages styled for Bootstrap 3.0 %>
<% if !current_page?('/users/sign_in')%>
  <% flash.each do |name, msg| %>
    <% if msg.is_a?(String) %>
      <div class="alert alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= content_tag :div, msg.html_safe, :id => "flash_#{name}" %>
      </div>
    <% end %>
  <% end %>
<% else %>
	<% msg = "Sorry, it looks like you don't have a course yet. Check with your instructor that your UCInetid is correct on your roster." %>
    <div class="alert alert-info">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= content_tag :div, msg.html_safe, :id => "flash_success" %>
    </div>
<% end %>