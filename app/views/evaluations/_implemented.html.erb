<p> Please make a Google Form and then return here and pick the form from the button below.</p>
<button type="button" class="btn btn-primary" id="pick">Pick File</button>
<table class="table" style= "border:1px grey!important;">
	<!-- goes throguh all users courses, then for every course, pushes all projects to array @projs-->
	<% @projs=[] %>
	<% current_user.courses.each do |course| %>
	<tr>
		<th><%= course.course_title%></th>
		<td><strong>Evaluation URL</strong></td>
		<td><strong>Project Name</strong></td>
	</tr>
	<% course.projects.each do |project| %>
	<tr>
		<% if project.id !=0 %>
		<td>
			<%if project.evaluation_id.nil? %>
		<%=  link_to "<span class=\"glyphicon glyphicon-plus\"></span>&#09;New Evaluation".html_safe, edit_project_path(project.id), class: "btn btn-success btn-md" %></td>
		<td style="background-color:#D50F25; opacity: .8; color: white; text-align:center; font-weight:bold;vertical-align: middle;">NO EVALUATION SET</td>
		<% else %>
	<%=  link_to "<span class=\"glyphicon glyphicon-pencil\"></span>&#09;Edit Evaluation".html_safe, edit_project_path(project.id), class: "btn btn-success btn-md" %></td>
	<% end %>
</td>
<td><%= project.name %></td>
<% end %>
</tr>
<% end %>
<tr>
<td colspan="9" style="height:50px;"></td>
</tr>
<% end %>
</table>
