<div class="authform", style="max-width: 2000px;">
  <h3>Edit User</h3>
  <%= form_for(resource, :as => resource_name, :url => user_registration_path, :html => { :method => :put, :role => 'form'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, :autofocus => true, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>
         <fieldset style="margin:5px 0px 5px 0px; padding: 20px 50px 20px 50px; text-align:center;"><div class="form-group"><h4>Profile Picture</h4>
  <b>Image Upload</b><br>
<div class="fileupload fileupload-new" data-provides="fileupload">
  <div class="fileupload-preview thumbnail" style="width: 75px; height:75px;"></div>
  <div>
    <span class="btn btn-primary btn btn-file"><%= f.file_field :avatar %>
      <span class="fileupload-new">Select image</span>
      <span class="fileupload-exists">Change</span>
      <input type="file" />
    </span>
    <a href="#" class="btn fileupload-exists" data-dismiss="fileupload">Remove</a>
  </div>
</div></fieldset>
    <%= f.submit 'Update', :class => 'btn btn-primary', :style => 'max-width: 200px; height:55px; float:center;' %>
</div>
<div style= "text-align:right;"><br><br><hr>
<h3>Cancel Account</h3>
  <%=  link_to "DELETE", cancel_user_path(current_user), :data => { :confirm => "Are you sure?" }, :class=>'btn btn-danger' %>
</fieldset>
 <%end%>
</div>
