<div class="section-group" style="width:100%;">
<div style="font-size:45px; font-weight:bold;">Students
<%= render 'layouts/course_select' %>
	<tr>
	<td class='collapsable'></td>
	<td><b>Student Name</td>
	<td class='collapsable'><b>Email</td></td> <td><b>Groups</td>
	</tr></b>
	<% @users.each do |user| %>
		<% users_courses = user.courses.collect(&:id)%>
		<% mycourse=current_user.current_course %>
		<% if users_courses.include?(mycourse) && user.role == 0 %>
			<tr>
				<td class='collapsable'><%= link_to (image_tag (user.avatar.url), :style => 'max-height: 55px; max-width: 55px;'), user %></td> 
				<td><%= link_to "#{user.first_name} #{user.last_name}", user %></td>
				<td class='collapsable'><%= user.email %></td>
				<td><%= user.groups.all.collect(&:name).to_sentence %></td>
			</tr>
		<% end %>
	<% end %>
</div>