<% case current_user.role %>
<% when 0 %>
<% if true %><%= render 'layouts/buttons/course_select'%><% else %>
<div class="section-group">
	<div class="col span_2_of_3">
		<%= render 'users/student_find_members' %>
	</div>
	<div class="col span_1_of_3">
		<% @group = current_user.groups.find_by(project_id: current_user.current_project) %>
		<%= render 'groups/profile', group: @group %>
	</div>
</div>
<% end %>
<% when 1 .. 3 %>
<%= render'users/professor_enrolled_students' %>
<% end %>
</table>