<% case current_user.role %>
<% when 0 %>
  <% if user.courses.collect(&:id).include?(current_user.current_course) %>
    	<% if current_user.id != user.id && (user.role == 0) %> 
              <tr>    <td class='collapsable'><%= link_to (image_tag (user.avatar.url), :style => 'max-height: 25px; max-width: 25px;'), user %></td> 
    <td><%= link_to user.name, user %></td>
    <td class='collapsable'><%= user.email %></td>
<% if current_user.groups == user.groups%>
      <td><button class="btn btn-primary"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;<%=  link_to "Send Request", add_to_group_user_path(user), :style => 'color: #fff; text-size:17px;max-width:100px; ' %></button></div></td>
<%else %>
      <td><button class="btn btn-primary"  disabled="disabled" style="max-width:100px; "><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;<%=  link_to "Requested", add_to_group_user_path(user), :style => 'color: #fff; text-size:17px;max-width:100px; ' %></button></div></td>
<%end%></tr></div>
      <% end %>
  <% end %>
<% when 1 .. 2 %>
    <% if user.role== 0 %>
           <tr> <td><%= user.first_name %><%= user.last_name %></td></tr>
  	<% end %>
<% when 3 %>
    <% if user.role== 0 %> 
           <tr> <td>><%= user.first_name %><%= user.last_name %></a></td><td><%=  link_to "Confirm Email", confirm_user_path(user), :class=>"smallbluebutton"  %></td><td></td>
  	<% end %>
<% end %>