<%= link_to("<< Back to List", users_path) %>

<div class="section group">
  <div class="col span_1_of_3"><%= image_tag @user.avatar.url, :style => "width:100%;"%></div>
  <div class="col span_2_of_3">
		<h2>Profile Page of <b><%= @user.first_name%></h2></b>

		<p>Name: <%= @user.first_name%> <%=@user.last_name %></p>
		<p>Email: <%= @user.email if @user.email %></p>
		<p>Last Sign In: <%= @user.last_sign_in_at if @user.last_sign_in_at %></p>
		
		<br>
		
		<button class="btn btn-primary"  style="max-width:200px; margin:auto;">
			<span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;&nbsp;&nbsp;<%=  link_to "Send Request", root_path, :style => 'color: #fff; text-size:17px;' %>
		</button>
		
		<br>
		
	</div>
</div>