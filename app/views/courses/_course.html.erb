<% case @current_user.role %>
<% when 0..3 %>
<tr>
	  <td class='collapsable'><%= course.id %></td>
      <td><%= course.course_title %></td>
      <td class='collapsable' width='30%'>
      	<% projects = course.projects.where(active: true).uniq %>
      	<% projects.each do |project| %>
      	<span class="glyphicons glyphicons-pushpin" style="font-size:10px;"></span>&ensp;<%= link_to project.name, edit_project_path(project.id) %><br>
      	<% end %>

      </td><td style="padding:0px">
	    <%=  link_to "<span class=\"glyphicons glyphicons-pencil\"></span>&nbsp;&nbsp;Edit".html_safe, edit_project_path(course.id), class: "btn btn-success btn-sm" %></td>
	    <td style="padding:0px">
    	 <%=  link_to "<span class=\"glyphicons glyphicons-remove\"></span>&nbsp;&nbsp;Delete".html_safe, remove_course_path(course.id), data: { confirm: "Are you sure you want to delete this course? You will permanently lose all information associated with this course."}, class: "btn btn-danger btn-sm" %></td><td>
      </td>
    </tr>
<% end %>